<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="@string/xposition"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:typeface="monospace"/>

        <Button
            android:id="@+id/result_data_dialog_xposition_top"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/dp_25dp"
            android:background="@drawable/button_left_unselected"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textSize="15sp"
            android:textColor="@color/colorBrightBlue"
            android:text="Top"/>

        <Button
            android:id="@+id/result_data_dialog_xposition_bottom"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/button_right_unselected"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textSize="15sp"
            android:textColor="@color/colorBrightBlue"
            android:text="Bottom"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/grayline" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="@string/yposition"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:typeface="monospace"/>

        <Button
            android:id="@+id/result_data_dialog_yposition_left"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/dp_25dp"
            android:background="@drawable/button_left_unselected"
            android:textAlignment="center"
            android:textColor="@color/colorBrightBlue"
            android:typeface="monospace"
            android:textSize="15sp"
            android:text="Left"/>

        <Button
            android:id="@+id/result_data_dialog_yposition_right"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/button_right_unselected"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textSize="15sp"
            android:textColor="@color/colorBrightBlue"
            android:text="Right"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/grayline" />

    <Button
        android:id="@+id/result_data_dialog_axesposition_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="16sp"
        android:typeface="monospace"
        android:text="@string/Pop_Cancel"
        android:textColor="@color/colorBlack"/>


</LinearLayout>
