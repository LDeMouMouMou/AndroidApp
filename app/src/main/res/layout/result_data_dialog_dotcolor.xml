<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="@string/originalDotsColor"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:typeface="monospace"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_black_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_brightblue_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_yellow_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_lightblue_unselected"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/grayline" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="@string/filteredDotsColor"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:typeface="monospace"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_brightblue_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_yellow_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_lightblue_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_lightblue_unselected"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/grayline" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="@string/standardDotsColor"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:typeface="monospace"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_brightblue_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_yellow_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_lightblue_unselected"/>

        <Button
            android:layout_width="@dimen/colorball_radius"
            android:layout_height="@dimen/colorball_radius"
            android:layout_marginStart="20dp"
            android:background="@drawable/colorball_lightblue_unselected"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/grayline" />

    <Button
        android:id="@+id/result_data_dialog_dotcolor_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="16sp"
        android:typeface="monospace"
        android:text="@string/Pop_Cancel"
        android:textColor="@color/colorBlack"/>

</LinearLayout>
