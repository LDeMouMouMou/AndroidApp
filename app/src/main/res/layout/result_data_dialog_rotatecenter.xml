<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10dp"
        android:layout_gravity="center"
        android:text="@string/EnterRotateCenter"
        android:textSize="16sp"
        android:typeface="serif"
        android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/center_coordinator_x"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="X"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:typeface="serif"
            android:inputType="numberDecimal"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" , "
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/center_coordinator_y"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Y"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:typeface="serif"
            android:inputType="numberDecimal"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ) "
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:typeface="serif"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10dp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:text="@string/EnterRotateCenterHint"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10dp"
        android:background="@drawable/grayline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/result_data_center_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textSize="16sp"
            android:typeface="monospace"
            android:text="@string/Pop_Cancel"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/grayline" />

        <Button
            android:id="@+id/result_data_center_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textSize="16sp"
            android:typeface="monospace"
            android:text="@string/Confirm"/>

    </LinearLayout>

</LinearLayout>
