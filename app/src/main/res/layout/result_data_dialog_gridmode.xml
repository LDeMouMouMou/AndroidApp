<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical" >

    <Button
        android:id="@+id/result_data_dialog_gridmode_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="@string/verticalgrid_on"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/grayline" />

    <Button
        android:id="@+id/result_data_dialog_gridmode_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="@string/horizontalgrid_on"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/grayline" />

    <Button
        android:id="@+id/result_data_dialog_gridmode_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="16sp"
        android:typeface="monospace"
        android:text="@string/Pop_Cancel"
        android:textColor="@color/colorBlack"/>


</LinearLayout>
