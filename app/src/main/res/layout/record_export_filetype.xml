<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bluetoothlist"
    android:layout_marginStart="@dimen/dp_10dp"
    android:layout_marginEnd="@dimen/dp_10dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:typeface="monospace"
        android:text="@string/export_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/record_export_filetype_xsl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="?android:attr/buttonStyle"
            android:background="@drawable/filetype_xsl"/>

        <Button
            android:id="@+id/record_export_filetype_txt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            style="?android:attr/buttonStyle"
            android:background="@drawable/filetype_txt"/>

        <Button
            android:id="@+id/record_export_filetype_pdf"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            style="?android:attr/buttonStyle"
            android:background="@drawable/filetype_pdf"/>

        <Button
            android:id="@+id/record_export_filetype_jpg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            style="?android:attr/buttonStyle"
            android:background="@drawable/filetype_jpg"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/grayline" />

    <Button
        android:id="@+id/record_export_filetype_cancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:typeface="monospace"
        android:text="@string/Pop_Cancel"/>


</LinearLayout>
