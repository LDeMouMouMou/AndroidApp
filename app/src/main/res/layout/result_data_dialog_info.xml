<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10dp"
    android:layout_marginEnd="@dimen/dp_10dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_bluetoothlist" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10dp"
        android:layout_marginTop="@dimen/dp_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Mode: "
            android:textSize="16sp"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/result_data_dialog_info_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:typeface="serif"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10dp"
        android:layout_marginTop="@dimen/dp_10dp">

        <TextView
            android:id="@+id/result_data_dialog_info_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10dp"
        android:layout_marginTop="@dimen/dp_10dp">

        <TextView
            android:id="@+id/result_data_dialog_info_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10dp"
        android:layout_marginTop="@dimen/dp_10dp">

        <TextView
            android:id="@+id/result_data_dialog_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10dp"
        android:layout_marginBottom="@dimen/dp_10dp"
        android:layout_marginTop="@dimen/dp_10dp">

        <TextView
            android:id="@+id/result_data_dialog_info_configuation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/result_data_dialog_info_configuationmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10dp"
            android:textColor="@color/colorBrightBlue"
            android:text="@string/more"
            android:textSize="16sp"
            android:typeface="serif" />

    </LinearLayout>

</LinearLayout>
